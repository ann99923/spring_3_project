-- 회원 테이블
create table member(
    id varchar2(50) primary key,
    pw varchar2(100) not null,
    name varchar2(30) not null,
    email varchar2(100),
    birth date not null,
    post varchar2(30),
    addr1 varchar2(100),
    addr2 varchar2(100),
    tel varchar2(30),
    adminck number(1) default 0 not null
);

-- prodNum 시퀀스
create sequence prod_seq start with 1 increment by 1;
-- 상품정보 테이블
create table product (
    prodNum number(4) primary key,
    categoryNum number(3) not null,
    prodName varchar2(100) not null,
    price number not null,
    img1 varchar2(50) not null,
    img2 varchar2(50),
    img3 varchar2(50),
    prodInfo varchar2(1000),
    stock number
);

-- orderNum 시퀀스
create sequence order_seq start with 1 increment by 1;
-- 주문 테이블
create table order (
    orderNum number(5) not null,
    id varchar2(50) not null,
    orderPrice number(10) default 0 not null,
    orderDate date default sysdate not null,
    orderPay varchar2(50) not null,
    orderStatus varchar2(30) not null,    --상품준비->배송준비->배송중->배송완료
    orderRecv varchar2(30) not null,
    orderPost varchar2(10) not null,
    orderAddr1 varchar2(100) not null,
    orderAddr2 varchar2(100) not null,
    orderMsg varchar2(1000),
    orderPointIn number(10),
    orderPointOut number(10) not null
);

-- 공지사항 테이블
create table notice(
    noticeNum number(30) unique,
    noticeTitle varchar2(100),
    noticeContent varchar2(3000),
    postDate date default sysdate,
);

-- cartNum 시퀀스
create SEQUENCE cart_seq INCREMENT by 1 start with 1;
--카트 테이블
create table cart(
cartNum number primary key,
prodNum number,
id varchar2(50),
cartCount number
);
